<p id="notice"><%= notice %></p>

<h1>Pins</h1>
<div class="container">
  <% @pins.each do |pin| %>
    <div class="col-md-3 col-lg-3 d-inline-block">
      <div class="img-thumbnail">
        <%= pin.description %>
        <%= image_tag(pin.photo, :class => 'img-fluid') %>
        <div class="buttons justify-content-center" style="margin-bottom: 10px; margin-top: 10px;">
          <%= link_to 'Show', pin, :class => 'btn' %>
          <%= link_to 'Edit', edit_pin_path(pin), :class => 'btn' %>
          <%= link_to 'Destroy', pin, method: :delete, data: {confirm: 'Are you sure?'}, :class => 'btn' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<br>

<%= link_to 'New Pin', new_pin_path %>
